
<html>
    <head>
        <title>Sign Up</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
        <script src="/public/JS/bootstrap-notify.js"></script>
        
        <link rel="stylesheet" href="/public/CSS/bootstrap.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/public/CSS/signup.css" />
        
        <script src="/public/JS/bootstrap.js"></script>
        
        <link rel="stylesheet" href="/public/CSS/animate.css" />
    </head>
    <body>
       
        <div class="container">
            <div class="row centered-form">
            <div class="col-xs-12 col-sm-7 col-md-7 sign-form">
                <div class="panel panel-default">
                    <div class="panel-heading signup-title">
                            <h3 class="panel-title">Please sign up for ZAP-Chat <small>It's free!</small></h3>
                            </div>
                            <div class="panel-body">
                            <form role="form" name="signup" method="post" action="/signup">
                                
                                    
                                <div class="form-group">
                                    <div >
                                        <img id="profile-img" class="signup-img" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />     
                                                                                
                                    </div>
                                </div>                                                                                                                                   
                               
                                 <div class="form-group" >
                                    <div>
                                        <input type="text" name="display_name" id="display_name" class="form-control input-sm floatlabel" placeholder="Display Name" required>
                                    </div>                                        
                                </div>
                              
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                        <input type="text" name="first_name" id="first_name" class="form-control input-sm floatlabel" placeholder="First Name" required>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address" required>
                                </div>

                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password" required>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password" required>
                                        </div>
                                    </div>
                                </div>
                                
                                <input type="submit" value="Register" class="btn btn-info btn-block">
                                <br/>
                                <div class="form-group">
                                    <a href="/" class="already-signup">
                                        Member login here.
                                    </a>
                                </div>
                            </form>
                        </div>
                            
                    </div>
                </div>
            </div>
        </div> 
        <script src="/public/JS/notify.js" ></script>
        <script>
            $(function(){
                
                var password = document.getElementById("password"), confirm_password = document.getElementById("password_confirmation");

                function validatePassword(){
                    if(password.value != confirm_password.value) {                        
                        confirm_password.setCustomValidity("Passwords Don't Match");
                    } else {
                        confirm_password.setCustomValidity('');
                    }
                }

                password.onchange = validatePassword;
                confirm_password.onkeyup = validatePassword;
                
               if ('<%=showpop%>' === '1')
               {                   
                   $.notify({icon:'/public/images/online-status.png',message:' Email is alread exist, Try another.'},{type:'danger'});
               } 
            });
        </script>       
    </body>
</html>
